<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14100F" >


    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="122dp"
        android:layout_height="123dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/myself"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="M Nur Alviansyah"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/profilepic"
        app:layout_constraintStart_toStartOf="@+id/profilepic"
        app:layout_constraintTop_toBottomOf="@+id/igicon" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/desc2"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nametxt" />

    <ImageButton
        android:id="@+id/waicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:onClick="onImageButtonClick"
        android:src="@drawable/whatsappicon"
        app:layout_constraintStart_toStartOf="@+id/profilepic"
        app:layout_constraintTop_toBottomOf="@+id/profilepic" />

    <ImageButton
        android:id="@+id/igicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/igicon"
        app:layout_constraintStart_toEndOf="@id/waicon"
        app:layout_constraintTop_toTopOf="@id/waicon"
        android:background="@color/transparent"
        android:layout_marginStart="@dimen/_10dp"/>

    <ImageButton
        android:id="@+id/emailicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/emailicon"
        app:layout_constraintStart_toEndOf="@id/igicon"
        app:layout_constraintTop_toTopOf="@id/waicon"
        app:layout_constraintBottom_toBottomOf="@id/waicon"
        android:background="@color/transparent"
        android:layout_marginStart="@dimen/_10dp"/>


    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uts_akb_10120907"
        android:textColor="@color/white"
        android:layout_marginTop="250dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nim"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="15dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>